<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>無聊滾球</title>
    <base href="@Url.Content("~/")" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    @*<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">*@

    <title>Bowling Balls - 紀錄平台</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/fontawesome.css">
    <link rel="stylesheet" href="~/Content/templatemo-space-dynamic.css">
    <link rel="stylesheet" href="~/Content/animated.css">
    <link rel="stylesheet" href="~/Content/owl.css">
    <link rel="stylesheet" href="~/Content/toastr.min.css">
    <link rel="stylesheet" href="~/Content/angular-moment-picker.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/moment-with-locales.js"></script>
    <script src="~/Scripts/angular-moment-picker.min.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>

    @RenderSection("Styles", required: false)
</head>
<body id="page-top">
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="@Url.Content("~/")" class="logo">
                            <h4>無聊<span>滾球</span></h4>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li>
                                <a href="#page-top" onclick="window.location.href='@Url.Action("Index", "Home")'; return false;">首頁</a>
                            </li>

                            <li>
                                <a href="#page-top" onclick="window.location.href='@Url.Content("~/Member/Create")'; return false;">新增分數</a>
                            </li>

                            @if (Session["Account"] != null)
                            {
                                if (Session["Account"].ToString().Equals("Donald"))
                                {
                                    <li>
                                        <a href="#page-top" onclick="window.location.href='@Url.Action("Upload", "Member")'; return false;">上傳檔案</a>
                                    </li>
                                }
                            }

                            <li>
                                <a href="#page-top" onclick="window.location.href='@Url.Content("~/Member/Record#!AllMemberRecord")'; return false;">個人紀錄</a>
                            </li>

                            <li>
                                <a href="#page-top" onclick="window.location.href='@Url.Action("Register", "Member")'; return false;">註冊</a>
                            </li>

                            @if (Session["Account"] == null)
                            {
                                <li>
                                    <div class="main-red-button">
                                        <a href="#page-top" onclick="window.location.href='@Url.Action("Login", "Member")'; return false;">登入</a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <div class="main-red-button">
                                        <a href="#page-top" onclick="window.location.href='@Url.Action("Login", "Member")'; return false;">@Session["Account"]</a>
                                    </div>
                                </li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 wow fadeIn" data-wow-duration="0.5s" data-wow-delay="0s">
                    <p>
                        © @DateTime.Now.Year 無聊滾球 版權所有 翻印必究。

                        <br>Design: <a rel="nofollow" href="@Url.Content("~/")">Donald Lu</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    @*<script src="~/Scripts/vendor/jquery/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>

    <script src="~/Scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/js/owl-carousel.js"></script>
    <script src="~/Scripts/js/animation.js"></script>
    <script src="~/Scripts/js/imagesloaded.js"></script>
    <script src="~/Scripts/js/templatemo-custom.js"></script>

    <script src="~/Scripts/jquery.form.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/WebApp/app.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>